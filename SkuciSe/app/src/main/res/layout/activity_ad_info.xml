<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdInfo">


    <TextView
        android:id="@+id/tbTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="108dp"
        android:fontFamily="@font/josefinsans_bold"
        android:text="Detalji o oglasu"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEditAd"
        android:layout_width="150dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Izmeni oglas"
        android:textColor="@color/white"
        app:backgroundTint="#ae76c1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tbLocation"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:ems="10"
        android:gravity="center"
        android:text="Lokacija"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbFlatHouse" />

    <TextView
        android:id="@+id/tbOther"
        android:layout_width="370dp"
        android:layout_height="41dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:gravity="left|center_vertical"
        android:text="Ostalo:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbEquipment" />

    <TextView
        android:id="@+id/tbFloor"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="center"
        android:text="Sprat:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.784"
        app:layout_constraintStart_toEndOf="@+id/tbSize"
        app:layout_constraintTop_toBottomOf="@+id/tbPrice" />

    <TextView
        android:id="@+id/tbSize"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="center"
        android:text="Kvadratura:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbLocation" />

    <TextView
        android:id="@+id/tbPrice"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:ems="10"
        android:gravity="center"
        android:text="Cena"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toEndOf="@+id/tbLocation"
        app:layout_constraintTop_toBottomOf="@+id/tbSellRent" />

    <TextView
        android:id="@+id/tbEquipment"
        android:layout_width="371dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="12dp"
        android:ems="10"
        android:gravity="left|center_vertical"
        android:text="Oprema:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbDescription" />

    <TextView
        android:id="@+id/tbSellRent"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="center"
        android:text="Izdavanje/Prodaja"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.745"
        app:layout_constraintStart_toEndOf="@+id/tbFlatHouse"
        app:layout_constraintTop_toBottomOf="@+id/adPicture" />

    <TextView
        android:id="@+id/tbDescription"
        android:layout_width="371dp"
        android:layout_height="63dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="left|center_vertical"
        android:text="Opis:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.725"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbFloor" />

    <TextView
        android:id="@+id/tbFlatHouse"
        android:layout_width="166dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:gravity="center"
        android:text="Stan/Kuca"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/adPicture" />

    <ImageView
        android:id="@+id/adPicture"
        android:layout_width="206dp"
        android:layout_height="164dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbTitle"
        app:srcCompat="@drawable/photo1" />

    <Button
        android:id="@+id/btnCloseAd"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="20dp"
        android:text="Zatvori oglas"
        android:textSize="12dp"
        android:textColor="@color/white"
        app:backgroundTint="#ae76c1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbOther"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnDeleteAd"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="Obrisi oglas"
        android:textSize="12dp"
        android:textColor="@color/white"
        app:backgroundTint="#ae76c1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbOther"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>