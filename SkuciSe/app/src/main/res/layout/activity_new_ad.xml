<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <CheckBox
        android:id="@+id/cbYard"
        android:layout_width="85dp"
        android:layout_height="36dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="43dp"
        android:text="Dvoriste"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toEndOf="@+id/cbBalcony"
        app:layout_constraintTop_toBottomOf="@+id/cbAc" />

    <CheckBox
        android:id="@+id/cbBalcony"
        android:layout_width="85dp"
        android:layout_height="36dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="43dp"
        android:text="Terasa"
        app:layout_constraintStart_toEndOf="@+id/cbElevator"
        app:layout_constraintTop_toBottomOf="@+id/cbAc" />

    <CheckBox
        android:id="@+id/cbAc"
        android:layout_width="114dp"
        android:layout_height="36dp"
        android:text="Klima"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toEndOf="@+id/cbIntercom"
        app:layout_constraintTop_toBottomOf="@+id/cbCableTv" />

    <CheckBox
        android:id="@+id/cbCableTv"
        android:layout_width="112dp"
        android:layout_height="37dp"
        android:layout_marginTop="60dp"
        android:text="Kablovska"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.036"
        app:layout_constraintStart_toEndOf="@+id/cbInternet"
        app:layout_constraintTop_toBottomOf="@+id/btnAddPicture" />

    <CheckBox
        android:id="@+id/cbInternet"
        android:layout_width="96dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="68dp"
        android:text="Internet"
        app:layout_constraintStart_toEndOf="@+id/cbHeating"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <EditText
        android:id="@+id/tbPrice"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Cena"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/josefinsans_bold"
        android:text="Oprema"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbDescription" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="132dp"
        android:fontFamily="@font/josefinsans_bold"
        android:text="Dodaj oglas"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tbTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Naslov oglasa"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/tbSize"
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Kvadratura"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgSellRent" />

    <RadioGroup
        android:id="@+id/rgHouseFlat"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbLocation">

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:checked="true"
            android:text="Kuća" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:text="Stan" />
    </RadioGroup>


    <EditText
        android:id="@+id/tbDescription"
        android:layout_width="151dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Opis"
        android:inputType="textMultiLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbSize" />

    <RadioGroup
        android:id="@+id/rgSellRent"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgHouseFlat">

        <RadioButton
            android:id="@+id/radioButton4"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginEnd="50dp"
            android:checked="true"
            android:text="Prodaja" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Izdavanje" />

    </RadioGroup>


    <EditText
        android:id="@+id/tbFloor"
        android:layout_width="150dp"
        android:layout_height="41dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Sprat"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rgSellRent" />

    <Button
        android:id="@+id/btnAddPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Dodaj slike"
        android:textColor="@color/white"
        app:backgroundTint="#ae76c1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbFloor" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="37dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/ic_baseline_photo_camera_24_purple"
        app:layout_constraintEnd_toStartOf="@+id/btnAddPicture"
        app:layout_constraintHorizontal_bias="0.055"
        app:layout_constraintStart_toEndOf="@+id/tbDescription"
        app:layout_constraintTop_toBottomOf="@+id/tbFloor" />

    <EditText
        android:id="@+id/tbLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Lokacija"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tbTitle" />

    <TextView
        android:id="@+id/lblAddNewAdMessage"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="80dp"
        android:gravity="center"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbElevator" />

    <Button
        android:id="@+id/btnAddNewAd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:text="Dodaj oglas"
        android:textColor="@color/white"
        app:backgroundTint="#83ad89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblAddNewAdMessage" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="407dp"
        android:layout_height="81dp"
        android:background="?attr/colorPrimary"
        android:backgroundTint="@color/white"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/imageBtnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="36dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:srcCompat="@drawable/ic_home_black_24dp" />

    <ImageButton
        android:id="@+id/imageBtnNewAd"
        android:layout_width="26dp"
        android:layout_height="24dp"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="36dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toStartOf="@+id/imageBtnProfile"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toEndOf="@+id/imageBtnHome"
        app:srcCompat="@drawable/ic_baseline_add_circle_green_24" />

    <ImageButton
        android:id="@+id/imageBtnProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="36dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:srcCompat="@drawable/ic_baseline_account_circle_24" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="16dp"
        android:text="Početna"
        android:textColor="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toStartOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="16dp"
        android:text="Nov oglas"
        android:textColor="@color/dark_green"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="81dp"
        android:layout_marginBottom="16dp"
        android:text="Profil"
        android:textColor="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/toolbar"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.187"
        app:layout_constraintStart_toEndOf="@+id/textView7" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/josefinsans_bold"
        android:text="Ostalo"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbSatelliteTv" />

    <CheckBox
        android:id="@+id/cbHeating"
        android:layout_width="96dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="4dp"
        android:text="Grejanje"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <CheckBox
        android:id="@+id/cbSatelliteTv"
        android:layout_width="96dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:text="Satelit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbHeating" />

    <CheckBox
        android:id="@+id/cbIntercom"
        android:layout_width="96dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:text="Interfon"
        app:layout_constraintStart_toEndOf="@+id/cbSatelliteTv"
        app:layout_constraintTop_toBottomOf="@+id/cbInternet" />

    <CheckBox
        android:id="@+id/cbGarage"
        android:layout_width="85dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="44dp"
        android:text="Garaza"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cbSatelliteTv" />

    <CheckBox
        android:id="@+id/cbElevator"
        android:layout_width="85dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:text="Lift"
        app:layout_constraintStart_toEndOf="@+id/cbGarage"
        app:layout_constraintTop_toBottomOf="@+id/cbIntercom" />



</androidx.constraintlayout.widget.ConstraintLayout>